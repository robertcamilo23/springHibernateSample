<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Comp473p2.domain.maintenance">
    <class name="MaintenanceRequest" table="MaintenanceRequests">
        <id name="requestId" column="requestId">
            <generator class="native"/>
        </id>
        <property name="description" type="java.lang.String" column="description"/>
        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">Comp473p2.domain.enums.MaintenanceStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <list name="maintenanceTickets" table="MaintenanceTickets" cascade="all">
            <key column="Rooms_id" foreign-key="Comp473p2.domain.facility.Room" not-null="true"></key>
            <list-index column="idx"/>
            <one-to-many class="Comp473p2.domain.maintenance.MaintenanceTicket"/>
        </list>
    </class>
</hibernate-mapping>